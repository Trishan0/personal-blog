<%- include('../../partials/header') %>

<div class="container">
    <div class="page-content">
        <div class="form-container">
            <h1 class="form-title">Create New Article</h1>

            <form class="form" action="" method="post">
                <div class="form-group">
                    <label for="title" class="form-label">Article Title</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Enter article title" required>
                </div>

<!--                <div class="form-group">-->
<!--                    <label for="author" class="form-label">Author</label>-->
<!--                    <input type="text" id="author" name="author" class="form-control" placeholder="Enter author name" required>-->
<!--                </div>-->

                <div class="form-group">
                    <label for="date" class="form-label">Publication Date</label>
                    <input type="date" id="date" name="date" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="content" class="form-label">Article Content</label>
                    <textarea id="content" name="content" class="form-control" placeholder="Write your article content here" rows="10" required></textarea>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-outline">Save Draft</button>
                    <button type="submit" class="btn">Publish Article</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>