<%- include('../partials/header') %>

<header>
    <div class="container">
        <h1>Modern Personal Blog</h1>
        <p>Thoughts, stories and ideas worth sharing</p>
    </div>
</header>

<div class="container">
    <div class="page-content">
        <div class="posts-grid">
            <% articles.forEach(article => { %>
                <div class="post-card">
                    <div class="post-image"></div>
                    <div class="post-content">
                        <div class="post-meta">
                            <div class="post-meta-item">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                </svg>
                                <p class="date"><%= article.date.toDateString() %></p>
                            </div>
                            <div class="post-meta-item">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                </svg>
                                <%= article.author %>
                            </div>
                        </div>
                        <h2 class="post-title"><%= article.title %></h2>
                        <p class="excerpt"><%= article.content.substring(0, 90) %>...</p>
                        <div class="post-footer">
                            <a href="/article/<%= article.id %>" class="btn">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>